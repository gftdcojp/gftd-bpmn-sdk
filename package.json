{
  "name": "@gftd/bpmn-sdk",
  "version": "0.1.0",
  "description": "Full BPMN 2.0 SDK with TypeScript DSL and bpmn-engine runtime integration",
  "license": "Apache-2.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "turbo lint",
    "format": "turbo format",
    "clean": "turbo clean",
    "typecheck": "turbo typecheck",
    "docs": "typedoc",
    "docs:serve": "npx http-server docs/api -p 8080"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/node": "^20.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "http-server": "^14.1.1",
    "jsdom": "^27.0.1",
    "turbo": "^1.13.0",
    "typedoc": "^0.28.14",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
