{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "skipLibCheck": true,
    "exactOptionalPropertyTypes": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "**/*.spec.ts"],
  "references": [
    { "path": "../core" },
    { "path": "../runtime" }
  ]
}
