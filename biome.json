{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf",
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "useConst": "error",
        "noUselessFragments": "warn"
      },
      "complexity": {
        "noUselessFragments": "warn"
      },
      "a11y": {
        "useAltText": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignore": [
      "node_modules",
      ".next",
      "dist",
      "**/*.generated.ts"
    ]
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "overrides": [
    {
      "include": ["packages/**/*.ts", "examples/**/*.ts"],
      "linter": {
        "rules": {
          "style": {
            "useNamingConvention": {
              "level": "error",
              "options": {
                "conventions": [
                  {
                    "selector": "typeLike",
                    "formats": ["PascalCase"]
                  },
                  {
                    "selector": "variable",
                    "formats": ["camelCase", "UPPER_CASE"]
                  },
                  {
                    "selector": "function",
                    "formats": ["camelCase"]
                  }
                ]
              }
            }
          }
        }
      }
    }
  ]
}
