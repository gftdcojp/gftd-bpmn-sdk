{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2020",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react-jsx",
    "types": ["vitest/globals"],
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/types.d.ts"],
  "exclude": ["dist", "node_modules", "src/__tests__/**"]
}

